<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="14.0sp" />

            <Button
                android:id="@+id/draftButton"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Draft"
                android:textColor="@android:color/white"
                android:textSize="14.0sp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="14.0sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/contentExceptButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/buttonContainer"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0px"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="10.0dip"
                    android:text="Total:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/totalFamilyMembersET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/femaleMembersET"
                    android:layout_below="@+id/textView2"
                    android:layout_toRightOf="@+id/textView8"
                    android:ems="10"
                    android:inputType="number">

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_below="@+id/totalFamilyMembersET"
                    android:layout_marginTop="10.0dip"
                    android:text="Male:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/maleMembersET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_toRightOf="@+id/textView8"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_below="@+id/maleMembersET"
                    android:layout_marginTop="18.0dip"
                    android:text="0-5 Years:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years0to5ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignRight="@+id/maleMembersET"
                    android:layout_toRightOf="@+id/textView8"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/years0to5ET"
                    android:layout_alignBottom="@+id/years0to5ET"
                    android:layout_toRightOf="@+id/years0to5ET"
                    android:text="5-11 Years"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years5to11ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/years0to5ET"
                    android:layout_alignBottom="@+id/years0to5ET"
                    android:layout_alignLeft="@+id/years19to49ET"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_below="@+id/years0to5ET"
                    android:layout_marginTop="24.0dip"
                    android:text="11-19 Years:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years11to19ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView8"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_alignRight="@+id/years0to5ET"
                    android:layout_toRightOf="@+id/textView8"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView6"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignRight="@+id/textView7"
                    android:text="Female:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years19to49ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView9"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_toRightOf="@+id/textView9"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_below="@+id/years11to19ET"
                    android:layout_marginTop="18.0dip"
                    android:text="49-60 Years:"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years49to60ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView10"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_alignRight="@+id/years11to19ET"
                    android:layout_toRightOf="@+id/textView10"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_toRightOf="@+id/years49to60ET"
                    android:text="60+ Years"
                    android:textAppearance="?android:textAppearanceSmall" />

                <EditText
                    android:id="@+id/years60PlusET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView11"
                    android:layout_alignBottom="@+id/textView11"
                    android:layout_alignLeft="@+id/years19to49ET"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15.0dip"
                    android:layout_toRightOf="@+id/textView1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView10"
                    android:layout_alignLeft="@+id/textView11"
                    android:text="19-49 Years"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignRight="@+id/education"
                    android:layout_below="@+id/education"
                    android:text="15. Number of family members"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/education"
                    android:text="14. Last Education:   "
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView10"
                    android:layout_alignRight="@+id/textView7"
                    android:layout_below="@+id/years49to60ET"
                    android:layout_marginTop="8dp"
                    android:text="16. Is there any member of the household with a major disability?"
                    android:textAppearance="?android:textAppearanceMedium" />

                <RadioGroup
                    android:id="@+id/disabilityRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView12">

                    <RadioButton
                        android:id="@+id/disabilityYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/disabilityNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="No" />
                </RadioGroup>

                <Spinner
                    android:id="@+id/spinnerPrimaryIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/disabilityRB"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/textView13" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignRight="@+id/textView12"
                    android:layout_alignTop="@+id/spinnerPrimaryIncome"
                    android:layout_alignBottom="@+id/spinnerPrimaryIncome"
                    android:layout_toLeftOf="@+id/textView11"
                    android:text="17. Main source of income:"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@+id/femaleMembersET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/years5to11ET"
                    android:layout_below="@+id/totalFamilyMembersET"
                    android:ems="10"
                    android:inputType="number" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout><!-- From: file:/E:/AndroProjectRepo/osman_git/Rampal-DB/HouseholdSurvey/app/src/main/res/layout/hh_activity_third_page.xml -->